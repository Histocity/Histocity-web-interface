
@using Histocity_Website.Models;
@model List<Category>

@{
    ViewBag.Title = "Category";
    Layout = "~/Views/_Layout.cshtml";
}
<br />
<h1>Categorie overzicht</h1>
<table class="table">
    <thead>
        <tr>
            <th>Categorie</th>
            <th>Niveau</th>
        </tr>
    </thead>
    @if (Model.Count != 0)
    {
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryDescription</td>
                <td>@category.Difficulty[category.CategoryDifficulty]</td>
            </tr>
        }
    }

</table>
<hr />
