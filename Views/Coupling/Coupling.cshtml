
@using Histocity_Website.Models;
@model List<Coupling>

@{
    ViewBag.Title = "Coupling";
    Layout = "~/Views/_Layout.cshtml";
}

<br />
<h1>Koppelingen overzicht</h1>
<table class="table">
    <thead>
        <tr>
            <th>Categorie</th>
            <th>Tijdperk</th>
        </tr>
    </thead>
    @if (Model.Count != 0)
    {
        @foreach (var coupling in Model)
        {
            <tr>
                <td>@coupling.CategoryID</td>
                <td>@coupling.EraID</td>
            </tr>
        }
    }
    </table>
<hr />

<h1>Categorie koppelen aan tijdperk</h1>
<form method="POST">
    <div class="form-group">
        @Html.DropDownList("CategoryID", new SelectList(ViewBag.Categories, "Text", "Value"), "-- Kies een categorie --", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.DropDownList("EraID", new SelectList(ViewBag.Era, "Text", "Value"), "-- Kies een tijdperk --", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <input class="btn btn-dark" type="submit" />
    </div>
</form>

