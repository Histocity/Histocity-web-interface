@model Histocity_Website.Models.User

@{
    ViewBag.Title = "Inloggen";
    Layout = "~/Views/_Layout.cshtml";
}

<h1>Inloggen</h1>

<form method="post">
    <div class="form-group">
        <input class="form-control" type="email" id="email" name="email" placeholder="Email" required />
    </div>

    <div class="form-group">
        <input class="form-control" type="password" id="password" name="password" placeholder="Wachtwoord" required />
    </div>

    <div class="form-group">
        <input value="Inloggen" class="btn btn-dark" type="submit" />
    </div>

    <a href="/User/Registration" class="text-secondary">Klik hier als u nog geen inloggegevens heeft.</a>

    @if (ViewBag.Message != "")
    {
        <p class="text-danger">@ViewBag.Message</p>
    }
</form>