
@{
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
}

<div class="card" style="margin:5% 20% 0 20%;">
    <div class="card-body">
        <h1 class="text-center">Account aanmaken voor Histocity</h1>
        <form method="POST">

            <div class="form-group">
                <input class="form-control" type="text" id="FirstName" name="FirstName" placeholder="Voornaam" required />
            </div>

            <div class="form-group">
                <input class="form-control" type="text" id="LastName" name="LastName" placeholder="Achternaam" required />
            </div>

            <div class="form-group">
                <input class="form-control" type="text" id="badAnswerText1" name="UserName" placeholder="Gebruikersnaam voor het spel" required />
            </div>

            <div class="form-group">
                <input class="form-control" type="password" id="badAnswerText2" name="Password" placeholder="Wachtwoord" required />
            </div>

            <div class="form-group">
                <input class="btn btn-dark" type="submit" />
            </div>
        </form>
    </div>
</div>